---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Gurajada&display=swap"
      rel="stylesheet"
    />

    <title>Luisa's Portfolio</title>
  </head>
  <body
    class="flex flex-col max-h-screen px-8
	p-4
    sm:px-8
    md:px-16
    lg:px-32
    xl:px-60
    2xl:px-80
	gap-24
	bg-[#030712]"
  >
    <Header />

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: white;
    overflow-y: auto;
  }
</style>
